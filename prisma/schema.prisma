generator client {
  provider = "prisma-client"
  output   = "../lib/prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model access_actions {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique @db.VarChar(50)
  description        String?
  created_at         DateTime?            @default(now()) @db.Timestamp(6)
  role_action_access role_action_access[]
}

model app_pages {
  id               Int                @id @default(autoincrement())
  name             String             @db.VarChar(100)
  path             String             @unique
  description      String?
  created_at       DateTime?          @default(now()) @db.Timestamp(6)
  icon_name        String?
  role_page_access role_page_access[]
}

model audit_logs {
  id         BigInt    @id @default(autoincrement())
  user_id    String?   @db.Uuid
  action     String    @db.VarChar(100)
  details    Json?     @default("{}")
  ip_address String?   @db.Inet
  user_agent String?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  users      users?    @relation(fields: [user_id], references: [id], onUpdate: NoAction)

  @@index([action], map: "idx_audit_logs_action")
  @@index([created_at(sort: Desc)], map: "idx_audit_logs_created_at")
  @@index([user_id], map: "idx_audit_logs_user_id")
}

model refresh_tokens {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String?   @db.Uuid
  token      String
  user_agent String?
  ip_address String?
  expires_at DateTime  @db.Timestamp(6)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  users      users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model role_action_access {
  id             BigInt         @id @default(autoincrement())
  role_id        Int
  action_id      Int
  created_at     DateTime?      @default(now()) @db.Timestamp(6)
  access_actions access_actions @relation(fields: [action_id], references: [id], onDelete: Cascade)
  roles          roles          @relation(fields: [role_id], references: [id], onDelete: Cascade)
}

model role_page_access {
  id         BigInt     @id @default(autoincrement())
  role_id    Int?
  page_id    Int?
  created_at DateTime?  @default(now()) @db.Timestamp(6)
  app_pages  app_pages? @relation(fields: [page_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  roles      roles?     @relation(fields: [role_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model roles {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique @db.VarChar(50)
  description        String?
  role_action_access role_action_access[]
  role_page_access   role_page_access[]
  user_roles         user_roles[]
}

model user_roles {
  user_id     String    @db.Uuid
  role_id     Int
  assigned_at DateTime? @default(now()) @db.Timestamp(6)
  roles       roles     @relation(fields: [role_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  users       users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([user_id, role_id])
}

model users {
  id             String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username       String           @unique @db.VarChar(50)
  email          String           @unique @db.VarChar(120)
  password_hash  String
  full_name      String?          @db.VarChar(100)
  is_active      Boolean?         @default(true)
  created_at     DateTime?        @default(now()) @db.Timestamp(6)
  updated_at     DateTime?        @default(now()) @db.Timestamp(6)
  storageUsed    BigInt           @default(0)
  storageLimit   BigInt           @default(2000000000)
  audit_logs     audit_logs[]
  refresh_tokens refresh_tokens[]
  user_roles     user_roles[]Â 

  files    file[]    @relation("owner_files")
  file_acls file_acl[]
  folders  folder[]
}

model file {
  id              String @id @default(uuid())
  owner           users  @relation(fields: [owner_id], references: [id], name: "owner_files")
  owner_id        String @db.Uuid
  name            String
  size            Int
  mime_type        String?
  storage_path     String // e.g. "users/{userId}/files/{uuid}.bin" or s3 key
  is_public        Boolean   @default(false)
  public_expires_at DateTime?
  meta            Json? // metafile as JSON (exif, custom tags)
  folder_id        String? // parent folder
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  is_deleted       Boolean   @default(false)
  deleted_at       DateTime?

  // relationships
  folder      folder?       @relation(fields: [folder_id], references: [id])
  acl_entries  file_acl[]
  versions    file_version[]
  public_links public_link[]
}

model file_version {
  id          String   @id @default(uuid())
  file_id      String
  file        file     @relation(fields: [file_id], references: [id])
  version_no   Int      @default(1)
  storage_path String
  size        Int
  mime_type    String?
  created_at   DateTime @default(now())
}

model file_acl {
  id        String   @id @default(uuid())
  file_id    String
  file      file     @relation(fields: [file_id], references: [id])
  user_id    String    @db.Uuid
  user      users    @relation(fields: [user_id], references: [id])
  can_read   Boolean  @default(true)
  can_write  Boolean  @default(false)
  can_share  Boolean  @default(false)
  created_at DateTime @default(now())

  @@unique([file_id, user_id])
}

model folder {
  id        String   @id @default(uuid())
  owner_id   String   @db.Uuid 
  owner     users    @relation(fields: [owner_id], references: [id])
  name      String
  parent_id  String?  
  parent    folder?  @relation("FolderChildren", fields: [parent_id], references: [id])
  children  folder[] @relation("FolderChildren")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  files    file[]
}

model public_link {
  id           String    @id @default(uuid())
  file_id       String
  file         file      @relation(fields: [file_id], references: [id])
  token        String    @unique // random token for public access
  expires_at    DateTime?
  max_downloads Int? // optional limit
  created_at    DateTime  @default(now())
  created_by    String? // user id who created
  downloads    Int       @default(0)

  @@index([expires_at], map: "idx_publiclink_expires_at")
}


model file_deletion_queue {
  id         String   @id @default(cuid())
  file_id    String
  object_key String
  bucket     String
  attempts   Int      @default(0)
  locked_at  DateTime? // mark when a worker is processing
  last_error String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([locked_at])
}